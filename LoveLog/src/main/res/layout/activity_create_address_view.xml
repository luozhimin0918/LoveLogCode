<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:fitsSystemWindows="true"
              android:background="@color/top_bar_bgColor"
              android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
            <LinearLayout
                    android:layout_width="fill_parent" android:layout_height="@dimen/head_height" android:orientation="horizontal">

                <ImageView
                        android:id="@+id/backBUt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="25dp"
                        android:src="@mipmap/back" />

                <TextView
                        android:id="@+id/tv_top_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="新建收货地址"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/tv_right_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="保存"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

            </LinearLayout>



            <LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="fill_parent"  android:background="@color/connet_bgColor" android:layout_weight="1">







                //新建收货地址
                <LinearLayout

                    android:id="@+id/ShouHuoAddressLinear"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <!--姓名-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#646464"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" android:text="收货人姓名："/>
                        <EditText
                            android:id="@+id/name"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>
                       <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>
                  <!--手机号码-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:textColor="#646464"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" android:text="手 机 号 码 ："/>
                        <EditText
                            android:id="@+id/phone"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:inputType="phone"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>
                       <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>

                    <!--所 在 地 区-->
                    <LinearLayout
                        android:id="@+id/addressSelect"
                        android:clickable="true"
                       android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">
                        <TextView
                             android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textColor="#646464"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" android:text="所 在 地 区 ："/>
                        <TextView
                            android:id="@+id/addAddressText"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:textColor="#ff111111"
                            android:textSize="16.0sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content" android:background="@mipmap/more" />
                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>

                    <!--详细地址-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">
                        <TextView

                            android:layout_width="wrap_content"
                            android:textColor="#646464"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" android:text="详 细 地 址 ："/>
                        <EditText
                            android:id="@+id/addresText"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>
                        <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>

                    <!--邮政编码-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">
                        <TextView

                            android:layout_width="wrap_content"
                            android:textColor="#646464"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" android:text="邮 政 编 码 ："/>
                        <EditText
                            android:id="@+id/youNum"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:inputType="number"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>
                    <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>

                </LinearLayout>





                //修改用户名/昵称

                <LinearLayout
                    android:id="@+id/UserLinear"
                    android:visibility="gone"
                    android:paddingTop="@dimen/space_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <!--新的用户名/昵称-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">

                        <EditText
                            android:id="@+id/newName"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/yuanjiao_white_bg"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:hint="新用户名/昵称"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>

                    <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>

                </LinearLayout>



                //修改性别
                <RadioGroup
                    android:id="@+id/group"
                    android:visibility="gone"
                    android:paddingTop="@dimen/space_10"
                    android:paddingLeft="@dimen/space_10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/baomi"
                        android:background="@null"
                        android:layout_marginTop="@dimen/space_10"
                        android:button="@null"
                        android:text="保密"
                        android:textSize="16sp"
                        android:textColor="#646464"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/space_10"
                        android:drawableLeft="@drawable/sex_select_button"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/nan"
                        android:background="@null"
                        android:text="男"
                        android:textSize="16sp"
                        android:textColor="#646464"
                        android:drawablePadding="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_10"
                        android:button="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sex_select_button"/>
                    <RadioButton
                        android:id="@+id/nv"
                        android:background="@null"
                        android:text="女"
                        android:textSize="16sp"
                        android:textColor="#646464"
                        android:drawablePadding="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_10"
                        android:button="@null"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sex_select_button"/>


                </RadioGroup>





                //修改密码

                <LinearLayout
                    android:id="@+id/PassLinear"
                    android:visibility="gone"
                    android:paddingTop="@dimen/space_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <!--旧密码-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">

                        <EditText
                            android:id="@+id/oldPassword"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/yuanjiao_white_bg"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:hint="原密码"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>
                    <!--新密码-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_10"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">

                        <EditText
                            android:id="@+id/newPassword"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/yuanjiao_white_bg"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:hint="新密码"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>
                    <!--再次输入新密码-->
                    <LinearLayout
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">

                        <EditText
                            android:id="@+id/anotherNewPassword"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/yuanjiao_white_bg"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:hint="再次输入新密码"
                            android:textColor="#ff111111"
                            android:textColorHint="#D4D4D4"
                            android:textSize="16.0sp" />

                    </LinearLayout>

                    <LinearLayout android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="1sp"></LinearLayout>

                </LinearLayout>













                <!--保存-->
                <LinearLayout
                    android:id="@+id/savaAddress"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@drawable/login_button">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>











     <LinearLayout
            android:id="@+id/vMasker"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="#e0000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>





    </FrameLayout>
</LinearLayout>