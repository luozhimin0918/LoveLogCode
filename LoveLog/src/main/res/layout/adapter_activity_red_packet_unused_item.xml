<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/connet_bgColor">
       <LinearLayout
           android:layout_marginRight="@dimen/space_10"
           android:layout_marginTop="@dimen/space_10"
           android:layout_marginLeft="@dimen/space_10"
           android:background="@drawable/zhijiao"
           android:orientation="vertical"
           android:layout_height="wrap_content"
           android:layout_width="fill_parent"
           >
           <ImageView
               android:background="@mipmap/red_packet_red"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content" />
          <LinearLayout
               android:layout_marginTop="@dimen/space_16"
               android:layout_marginBottom="@dimen/space_20"
               android:orientation="horizontal"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="100dp"
                   android:gravity="center_horizontal"
                   android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/top_bar_bgColor"
                            android:textSize="20sp"
                            android:layout_height="wrap_content" android:text="￥"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/top_bar_bgColor"
                            android:textSize="38sp"
                            android:layout_height="wrap_content" android:text="9"/>
                    </LinearLayout>
                   <TextView
                       android:layout_marginTop="@dimen/space_5"
                       android:layout_width="wrap_content"
                       android:textColor="#696969"
                       android:textSize="15sp"
                       android:layout_height="wrap_content"
                       android:text="满20可用"/>

               </LinearLayout>
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:gravity="left"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:textColor="#333333"
                       android:layout_marginTop="@dimen/space_2"
                       android:textSize="18sp"
                       android:layout_height="wrap_content" android:text="支付红包"/>
                   <TextView
                       android:layout_marginTop="@dimen/space_12"
                       android:layout_width="wrap_content"
                       android:textColor="#696969"
                       android:textSize="14sp"
                       android:lines="2"
                       android:lineSpacingMultiplier="1"
                       android:layout_height="wrap_content"
                       android:text="156256396585，App下单使用，在线支付专享。"/>
               </LinearLayout>
           </LinearLayout>


           <ImageView
               android:background="@mipmap/line_xuan"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content" />

           <LinearLayout
               android:gravity="center_vertical"
               android:layout_marginTop="@dimen/space_6"
               android:layout_marginBottom="@dimen/space_6"
               android:layout_marginLeft="@dimen/space_10"
               android:layout_marginRight="@dimen/space_10"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:background="@mipmap/time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginLeft="@dimen/space_5"
                   android:layout_width="wrap_content"
                   android:textColor="#9C9C9C"
                   android:textSize="15sp"
                   android:layout_height="wrap_content"
                   android:text="还有7天过期"/>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="right"
                   android:textColor="#9C9C9C"
                   android:textSize="15sp"
                   android:layout_height="wrap_content"
                   android:text="有效期至：2016-1-06"/>
           </LinearLayout>





       </LinearLayout>

</LinearLayout>


