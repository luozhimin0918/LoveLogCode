<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/connet_bgColor" android:layout_width="fill_parent" android:layout_height="10dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:text="张三"/>
        <TextView
            android:id="@+id/phoneTextview"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:text="1312554544646"/>
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="wrap_content"
            android:textColor="#C6606D"
            android:textSize="16sp"
            android:layout_height="wrap_content" android:text="默认地址"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
       android:layout_margin="@dimen/space_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!---->
        <TextView
            android:layout_width="fill_parent"
            android:textColor="#696969"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="上海市浦东新区金科路2889弄长泰广场C栋804室"/>
        </LinearLayout>
    <View
        android:background="@color/connet_bgColor"
        android:layout_width="fill_parent"
        android:layout_height="1sp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/idDefaul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/isImage"
                android:layout_margin="@dimen/space_10"
                android:background="@mipmap/choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="#696969"
            android:textSize="14sp"
            android:layout_height="wrap_content" android:text="设为默认地址"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="wrap_content"
                android:textColor="#696969"
                android:gravity="center_vertical"
                android:padding="@dimen/space_10"
                android:drawableLeft="@mipmap/editor"
                android:drawablePadding="@dimen/space_5"
                android:textSize="14sp"
                android:layout_height="wrap_content" android:text="编辑"/>
            <TextView
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_width="wrap_content"
                android:textColor="#696969"
                android:gravity="center_vertical"
                android:padding="@dimen/space_10"
                android:drawableLeft="@mipmap/delete"
                android:drawablePadding="@dimen/space_5"
                android:textSize="14sp"
                android:layout_height="wrap_content" android:text="删除"/>
        </LinearLayout>
        </LinearLayout>


</LinearLayout>