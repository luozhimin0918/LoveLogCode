<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:orientation="vertical" android:background="@color/connet_bgColor">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp" >
        <com.smarter.LoveLog.ui.AutoScrollViewPager
                android:id="@+id/viewPager_menu"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
        />
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            <LinearLayout
                    android:id="@+id/viewgroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:paddingRight="@dimen/margin_max_large"
                    android:paddingBottom="@dimen/margin_med"
                    android:orientation="horizontal" />
        </RelativeLayout>
    </FrameLayout>






    <com.smarter.LoveLog.ui.MyGridView
            android:id="@+id/my_community_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="10dp"
            android:background="@color/white"
            android:numColumns="4"
            android:paddingTop="@dimen/space_10"
            android:paddingBottom="@dimen/space_10"
            android:verticalSpacing="10dp" >
    </com.smarter.LoveLog.ui.MyGridView>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            <LinearLayout

                android:background="#9A9A9A"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="1px"></LinearLayout>
            <TextView
               android:text="热门推荐"
               android:textSize="15sp"
                android:layout_margin="@dimen/space_12"
                android:textColor="#989898"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <LinearLayout
                android:background="#9A9A9A"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="1px"></LinearLayout>

    </LinearLayout>


    <!--<View
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="@dimen/space_3"
    />-->
</LinearLayout>
