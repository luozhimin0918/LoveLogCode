<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/top_bar_bgColor"
    android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent" android:layout_height="@dimen/head_height" android:orientation="horizontal">

        <ImageView
                android:id="@+id/backBUt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:src="@mipmap/back" />

        <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="填写订单"
                android:textColor="@color/white"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/tv_right_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注册"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:textSize="15sp" />

    </LinearLayout>



    <LinearLayout  android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="fill_parent"  android:background="@color/connet_bgColor" android:layout_weight="1">


       <com.smarter.LoveLog.ui.McoySnapPageLayout.McoyScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:focusable="true"
            android:fillViewport="true"
            >
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">



                    <LinearLayout   android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:id="@+id/addressRelatiBut"  android:padding="10dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@mipmap/adressbg"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                              <LinearLayout
                                  android:orientation="horizontal"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content">
                                  <LinearLayout
                                      android:layout_width="fill_parent"
                                      android:layout_weight="1.2"
                                      android:gravity="center_vertical"
                                      android:layout_height="wrap_content">
                                      <ImageView
                                          android:layout_width="wrap_content"
                                          android:layout_marginTop="@dimen/space_3"
                                          android:layout_height="wrap_content" android:background="@mipmap/name_order" />
                                      <TextView
                                          android:layout_marginLeft="@dimen/space_10"
                                          android:layout_width="wrap_content"
                                          android:textColor="#323232"
                                          android:textSize="18sp"
                                          android:layout_height="wrap_content" android:text="罗志敏"/>
                                  </LinearLayout>


                                  <LinearLayout
                                      android:layout_width="fill_parent"
                                      android:layout_weight="0.6"
                                      android:gravity="center_vertical"
                                      android:layout_height="wrap_content">

                                      <ImageView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content" android:background="@mipmap/phone_order" />
                                      <TextView
                                          android:layout_marginLeft="@dimen/space_10"
                                          android:layout_width="wrap_content"
                                          android:textColor="#323232"
                                          android:textSize="18sp"
                                          android:layout_height="wrap_content" android:text="1536525445655"/>
                                   </LinearLayout>
                              </LinearLayout>


                             <LinearLayout
                                android:orientation="horizontal"
                                 android:layout_marginTop="@dimen/space_10"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                 <TextView
                                     android:background="@drawable/yuanjiao_love_red_bg"
                                     android:layout_width="wrap_content"
                                     android:textColor="@color/white"
                                     android:paddingLeft="@dimen/space_10"
                                     android:paddingRight="@dimen/space_10"
                                     android:paddingBottom="@dimen/space_2"
                                     android:paddingTop="@dimen/space_2"
                                     android:textSize="12sp"
                                     android:text="默认"
                                     android:layout_height="wrap_content" />
                                 <TextView
                                     android:id="@+id/addressStr"
                                     android:layout_marginLeft="@dimen/space_10"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="上海市来得快斯蒂芬第三方的打算斯蒂芬 大是大非"
                                     android:textColor="#5D5D5D"
                                     android:textSize="16sp" />
                             </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" android:background="@mipmap/more" />
                    </LinearLayout>





                    <LinearLayout  android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:padding="10dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@color/white"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                             <com.android.volley.toolbox.NetworkImageView
                                android:id="@+id/iv_adapter_grid_pic"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:src="@drawable/loading_small" />
                              <LinearLayout
                                  android:layout_weight="1"
                                  android:layout_marginLeft="@dimen/space_10"
                                  android:orientation="vertical"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content">
                                  <TextView
                                      android:id="@+id/goodDes"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:singleLine="true"
                                      android:text="上海市来得快斯蒂芬第三方的打算斯蒂芬 大是大非"
                                      android:textColor="#5D5D5D"
                                      android:textSize="16sp" />
                                  <LinearLayout
                                      android:orientation="horizontal"
                                      android:layout_marginTop="@dimen/space_10"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content">
                                      <TextView
                                          android:id="@+id/numBer"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:singleLine="true"
                                          android:text="x1"
                                          android:textColor="#5D5D5D"
                                          android:textSize="16sp" />
                                      <TextView
                                          android:id="@+id/goodsType"
                                          android:layout_marginLeft="@dimen/space_20"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:singleLine="true"
                                          android:text="青春版"
                                          android:textColor="#5D5D5D"
                                          android:textSize="16sp" />
                                  </LinearLayout>
                                  <TextView
                                      android:id="@+id/shopPrice"
                                      android:layout_marginTop="@dimen/space_10"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="center_vertical"
                                      android:text="￥49.00  "
                                      android:textColor="@color/top_bar_bgColor"
                                      android:textSize="18sp" />
                              </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" android:background="@mipmap/more" />
                    </LinearLayout>




                    <LinearLayout android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:padding="10dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@color/white"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                             <LinearLayout
                                 android:orientation="horizontal"
                                 android:gravity="center_vertical"
                                 android:layout_width="fill_parent"
                                 android:layout_height="wrap_content">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="支付配送"
                                     android:textColor="#5D5D5D"
                                     android:textSize="16sp" />
                                 <LinearLayout
                                     android:orientation="vertical"
                                     android:gravity="right|center_vertical"
                                     android:layout_width="fill_parent"
                                     android:layout_weight="1"
                                     android:layout_height="wrap_content">
                                     <TextView
                                         android:layout_marginLeft="@dimen/space_10"
                                         android:layout_width="wrap_content"
                                         android:textColor="#323232"
                                         android:textSize="16sp"
                                         android:layout_height="wrap_content" android:text="在线支付"/>
                                     <TextView
                                         android:layout_marginLeft="@dimen/space_10"
                                         android:layout_marginTop="@dimen/space_10"
                                         android:layout_width="wrap_content"
                                         android:textColor="#323232"
                                         android:textSize="16sp"
                                         android:layout_height="wrap_content" android:text="申通支付"/>
                                 </LinearLayout>
                                 <ImageView
                                     android:layout_width="wrap_content"
                                     android:layout_marginLeft="10dp"
                                     android:layout_height="wrap_content" android:background="@mipmap/more" />
                             </LinearLayout>

                             <LinearLayout
                                 android:orientation="horizontal"
                                 android:layout_marginTop="@dimen/space_10"
                                 android:background="@color/connet_bgColor"
                                 android:layout_width="fill_parent"
                                 android:gravity="right|center_vertical"
                                 android:layout_height="wrap_content">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:textColor="#323232"
                                     android:padding="@dimen/space_8"
                                     android:layout_marginRight="@dimen/space_5"
                                     android:layout_gravity="right"
                                     android:textSize="14sp"
                                     android:layout_height="wrap_content" android:text="工作日，双休日与节假日均可送货"/>
                             </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>





                    <LinearLayout android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:padding="10dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@color/white"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发票信息"
                                    android:textColor="#5D5D5D"
                                    android:textSize="16sp" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:gravity="right|center_vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_marginLeft="@dimen/space_10"
                                        android:layout_width="wrap_content"
                                        android:textColor="#323232"
                                        android:textSize="16sp"
                                        android:layout_height="wrap_content" android:text="纸质发票"/>
                                    <TextView
                                        android:layout_marginLeft="@dimen/space_10"
                                        android:layout_marginTop="@dimen/space_10"
                                        android:layout_width="wrap_content"
                                        android:textColor="#323232"
                                        android:textSize="16sp"
                                        android:layout_height="wrap_content" android:text="个人"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content" android:background="@mipmap/more" />
                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>





                    <LinearLayout android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:padding="15dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@color/white"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的红包"
                                    android:textColor="#5D5D5D"
                                    android:textSize="16sp" />
                                <TextView
                                    android:background="@drawable/yuanjiao_love_red_bg"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="@dimen/space_5"
                                    android:paddingLeft="@dimen/space_5"
                                    android:paddingRight="@dimen/space_5"
                                    android:paddingBottom="@dimen/space_2"
                                    android:paddingTop="@dimen/space_2"
                                    android:textSize="12sp"
                                    android:text="1张可用"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:gravity="right|center_vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_marginLeft="@dimen/space_10"
                                        android:layout_width="wrap_content"
                                        android:textColor="#323232"
                                        android:textSize="16sp"
                                        android:layout_height="wrap_content" android:text="未使用"/>

                                </LinearLayout>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content" android:background="@mipmap/more" />
                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:padding="10dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@color/white"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:textColor="#5D5D5D"
                                        android:textSize="16sp"
                                        android:layout_height="wrap_content" android:text="商品金额"/>
                                    <TextView
                                        android:layout_alignParentRight="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="￥49.00  "
                                        android:textColor="@color/top_bar_bgColor"
                                        android:textSize="18sp" />


                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_marginTop="@dimen/space_10"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#5D5D5D"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content" android:text="商品金额"/>
                                <TextView
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥49.00  "
                                    android:textColor="@color/top_bar_bgColor"
                                    android:textSize="18sp" />


                            </RelativeLayout>



                        </LinearLayout>


                    </LinearLayout>


            </LinearLayout>
        </com.smarter.LoveLog.ui.McoySnapPageLayout.McoyScrollView>






    </LinearLayout>





    <!--
    悬浮栏-->



    <LinearLayout
        android:id="@+id/xuanfuBar"
        android:layout_width="fill_parent" android:layout_height="@dimen/bottom_height" android:background="@color/white" android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@mipmap/alloptbg"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/space_10"
            android:text="实付款：￥49.00  "
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/top_bar_bgColor"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>