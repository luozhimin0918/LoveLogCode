<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>










    <!-- 默认风格 -->
    <style name="BrowserThemeDefault" parent="android:Theme.Holo.Light">
        <item name="flash_blow">#edf9ff</item>
        <item name="flash_blow_bg">#ffffff</item>
        <item name="flash_bg">#ffffff</item>
        <item name="flash_tv">#666666</item>
        <item name="flash_top">#116bcc</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <!-- 夜间模式 -->
    <style name="BrowserThemeNight" parent="android:Theme.Holo.Light">
        <item name="flash_blow">#04274c</item>
        <item name="flash_blow_bg">#04274c</item>
        <item name="flash_bg">#031e3c</item>
        <item name="flash_tv">#999999</item>
        <item name="flash_top">#04274c</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>

    <style name="footbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>
    <style name="main_footbar_radio" parent="footbar">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>



</resources>
